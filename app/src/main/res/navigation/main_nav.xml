<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.druide.flexwithmovies.ui.fragment.movies.MoviesFragment"
        android:label="Movies Fragment"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_moviesFragment_to_moviesDetailsFragment"
            app:destination="@id/moviesDetailsFragment" />
    </fragment>


    <fragment
        android:id="@+id/moviesDetailsFragment"
        android:name="com.druide.flexwithmovies.ui.fragment.movie.MovieDetailsFragment"
        android:label="Movies Details Fragment"
        tools:layout="@layout/fragment_movie_details" />

</navigation>