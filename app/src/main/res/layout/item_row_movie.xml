<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:layout_weight="1"
    android:background="@android:color/transparent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_movie_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/tv_movie_title_row"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars">

    </androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:id="@+id/tv_movie_title_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="start|center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        app:layout_constraintBottom_toTopOf="@id/tv_movie_release_date_row"
        app:layout_constraintEnd_toEndOf="@id/iv_movie_row"
        app:layout_constraintStart_toStartOf="@id/iv_movie_row"
        app:layout_constraintTop_toBottomOf="@id/iv_movie_row"
        tools:ignore="UseCompatTextViewDrawableXml"
        tools:text="Bad Boys" />

    <TextView
        android:id="@+id/tv_movie_release_date_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="start|center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_movie_row"
        app:layout_constraintStart_toStartOf="@id/iv_movie_row"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title_row"
        tools:text="2019" />
</androidx.constraintlayout.widget.ConstraintLayout>
